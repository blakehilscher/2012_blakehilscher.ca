.rockhil-form
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    .field.field-header
      .field-describe
        %h2= f.label :email, "Sign up"
    
    = devise_error_messages!
  
    .field.field-textfield
      .field-describe= f.label :email
      .field-request= f.email_field :email
    
    .field.field-password_field
      .field-describe= f.label :password
      .field-request= f.password_field :password
    
    .field.field-password_field
      .field-describe= f.label :password_confirmation
      .field-request= f.password_field :password_confirmation
  
    .field.field-actions
      .field-describe
      .field-request= f.submit "Sign Up"
    
  
= render "links"
