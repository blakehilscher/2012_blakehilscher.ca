!!! 5
-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
- html_tag :class => "no-js", :lang => "en" do
  = render "application/head"

  %body{ :class => "#{ controller.controller_name }" }
    = render "application/chromeframe"
    
    #container
      = render "application/header"
      
      #main{:role => "main"}
        = render "application/flashes"

        #content{:class => "#{'with-aside_main' if content_for? :aside_main}"}
          .inner-content= yield
          
        - if content_for? :aside_main
          %aside.main
            .inner-aside-main= yield :aside_main
      
      = render "application/footer"

    -# Javascript at the bottom for fast page loading
    = render "application/javascripts"